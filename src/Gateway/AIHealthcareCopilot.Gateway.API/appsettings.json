{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "AIHealthcareCopilot",
    "Audience": "AIHealthcareCopilot",
    "ExpiryMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "patients-route": {
        "ClusterId": "patients-cluster",
        "Match": {
          "Path": "/api/patients/{**catch-all}"
        }
      },
      "doctors-route": {
        "ClusterId": "patients-cluster",
        "Match": {
          "Path": "/api/doctors/{**catch-all}"
        }
      },
      "analysis-route": {
        "ClusterId": "analysis-cluster",
        "Match": {
          "Path": "/api/analysis/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://localhost:5081/"
          }
        }
      },
      "patients-cluster": {
        "Destinations": {
          "patients-destination": {
            "Address": "http://localhost:5246/"
          }
        }
      },
      "analysis-cluster": {
        "Destinations": {
          "analysis-destination": {
            "Address": "http://localhost:5001/"
          }
        }
      }
    }
  }
}